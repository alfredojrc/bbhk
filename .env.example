# BBHK Environment Configuration
# Copy this file to .env and configure your settings:
#   cp .env.example .env

# ===========================================
# HackerOne API (HACKER API - Free tier)
# ===========================================
HACKERONE_API_USERNAME=your_hackerone_username
HACKERONE_API_TOKEN=your_hackerone_api_token
HACKERONE_EMAIL=your_email@example.com

# ===========================================
# Database Configuration
# ===========================================
DATABASE_URL=sqlite:///database/bbhk.db
# For PostgreSQL production use:
# DATABASE_URL=postgresql://bbhk_user:YOUR_PASSWORD@postgres:5432/bbhk_production
POSTGRES_PASSWORD=change_me_to_secure_password

# ===========================================
# API Configuration
# ===========================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
LOG_LEVEL=info

# ===========================================
# Frontend Configuration
# ===========================================
REACT_APP_API_URL=http://localhost:8000
REACT_APP_ENV=production

# ===========================================
# Security
# ===========================================
SECRET_KEY=change-me-to-random-secret
JWT_SECRET=change-me-to-random-jwt-secret

# ===========================================
# Docker Services
# ===========================================
GRAFANA_PASSWORD=change_me_to_secure_password

# ===========================================
# Redis Configuration
# ===========================================
REDIS_URL=redis://redis:6379/0

# ===========================================
# Qdrant Vector Database
# ===========================================
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_COLLECTION=bbhk-programs
# QDRANT_API_KEY=your_qdrant_api_key

# ===========================================
# ProjectDiscovery Cloud (Optional)
# ===========================================
# PDCP_API_KEY=your_projectdiscovery_api_key

# ===========================================
# Rate Limiting & Safety
# ===========================================
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_PERIOD=3600
ENABLE_COMPLIANCE_CHECK=true
MAX_SCAN_TARGETS=100
SCAN_TIMEOUT=300

# ===========================================
# Development
# ===========================================
DEBUG=false
ENABLE_CORS=true
